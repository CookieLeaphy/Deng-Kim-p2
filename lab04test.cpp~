#include <cstdlib>
#include <ncurses.h>


int main() {

initscr();                 // start curses mode
printw("Hello World !!!"); // print Hello 
Worldrefresh();                 // print it on to the real 
screengetch();                   // wait for user 
inputendwin();                  // end curses modereturn

 EXIT_SUCCESS;

} // main
